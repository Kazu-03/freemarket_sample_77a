- if !Favorite.exists?(user_id:current_user.id,product_id:product.id)
  = link_to product_add_path(product),method: :post, remote: true do
    .itemBox__optionalArea__like{id: "itemBox__optionalArea__like"}
      .itemBox__optionalArea__like--name
        = icon("fas","star",class:"itemBox__optionalArea__like--name--icon")
        %p.itemBox__optionalArea__like--name--content
          お気に入り
      .itemBox__optionalArea__like--count
        %p
          = product.favorites.count
- else
  = link_to product_add_path(product),method: :delete, remote: true do
    .itemBox__optionalArea2__like
      .itemBox__optionalArea2__like--name
        = icon("fas","star",class:"itemBox__optionalArea2__like--name--icon")
        %p.itemBox__optionalArea2__like--name--content
          お気に入り
      .itemBox__optionalArea2__like--count
        %p
          = product.favorites.count